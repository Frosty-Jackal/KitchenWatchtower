/* 证书卡片容器 */
.cert-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  transition: all 0.2s;
}

/* 标题区域 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.cert-title {
  font-size: 36rpx;
  color: #2D2D2D;
  font-weight: 500;
  max-width: 70%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.header-actions {
  display: flex;
  gap: 24rpx;
}

/* 操作按钮样式 */
.action-btn {
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  transition: all 0.2s;
}

.delete {
  color: #FF4747;
  border: 1rpx solid #FF4747;
}

.modify {
  color: #347AFF;
  border: 1rpx solid #347AFF;
}

/* 信息区域 */
.card-body {
  margin-top: 24rpx;
}

.info-group {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx 40rpx;
}

.info-item {
  min-width: 45%;
  display: flex;
  align-items: center;
}

.info-label {
  font-size: 28rpx;
  color: #7F7F7F;
  min-width: 120rpx;
  display: inline-block;
}

.info-value {
  font-size: 30rpx;
  color: #2D2D2D;
  flex: 1;
}

/* 交互反馈 */
.cert-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}
/* 恢复原有按钮样式 */
.btn-submit {
  position: fixed;
  bottom: 60rpx;
  left: 40rpx;
  right: 40rpx;
  z-index: 999;
}

.btn-block {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 34rpx;
  font-weight: 500;
  transition: all 0.2s;
}

.btn-orange {
  background: linear-gradient(135deg, #FF6B6B, #FF8E53);
  color: white;
  box-shadow: 0 12rpx 24rpx -6rpx rgba(255,107,107,0.6);
}

.btn-orange:active {
  opacity: 0.8;
  transform: scale(0.98);
}