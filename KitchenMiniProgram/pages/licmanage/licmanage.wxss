/* 证书卡片容器 */
.cert-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 10rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  transition: all 0.2s;
}

/* 标题区域 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.cert-title {
  font-size: 36rpx;
  color: #2D2D2D;
  font-weight: 500;
  max-width: 70%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.header-actions {
  display: flex;
  gap: 24rpx;
}

/* 操作按钮样式 */
.action-btn {
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  transition: all 0.2s;
}

.delete {
  color: #FF4747;
  border: 1rpx solid #FF4747;
}

.modify {
  color: #347AFF;
  border: 1rpx solid #347AFF;
}

/* 信息区域 */
.card-body {
  margin-top: 24rpx;
}

.info-group {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx 40rpx;
}

.info-item {
  min-width: 45%;
  display: flex;
  align-items: center;
}

.info-label {
  font-size: 28rpx;
  color: #7F7F7F;
  min-width: 120rpx;
  display: inline-block;
}

.info-value {
  font-size: 30rpx;
  color: #2D2D2D;
  flex: 1;
}

/* 交互反馈 */
.cert-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}
/* 恢复原有按钮样式 */
.btn-submit {
  position: fixed;
  bottom: 60rpx;
  left: 40rpx;
  right: 40rpx;
  z-index: 999;
}

.btn-block {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 34rpx;
  font-weight: 500;
  transition: all 0.2s;
}

.btn-orange {
  background: linear-gradient(135deg, #FF6B6B, #FF8E53);
  color: white;
  box-shadow: 0 12rpx 24rpx -6rpx rgba(255,107,107,0.6);
}

.btn-orange:active {
  opacity: 0.8;
  transform: scale(0.98);
}
.search-bar {
  padding: 20rpx 20rpx 0 0rpx; /* 上、左右保留，下减为0 */
  background: #fff;
  margin-bottom: 0rpx;
}

.search-bar input {
  width: 50%;
  height: 72rpx;
  border: 1rpx solid rgb(250, 58, 0);
  border-radius: 16rpx;
  margin-bottom: 0rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
}

.sort-picker {
  margin-top: 0rpx;
  margin-bottom: 8rpx;
  padding: 8rpx 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
}


/* 新增顶部控制容器样式 */
.top-controls {
  display: flex;
  flex-direction: column;
  gap: 12rpx; /* 控制搜索栏与排序栏间距 */
  padding: 20rpx 20rpx 0 20rpx;
  background: #fff;
}

/* 调整搜索栏样式 */
.search-bar {
  padding: 0; /* 清除原有padding */
  margin-bottom: 0;
}
.search-bar input {
  transition: all 0.2s;
}
.search-bar input:focus {
  border-color: #FF6B6B;
  box-shadow: 0 4rpx 12rpx rgba(255,107,107,0.1);
}

/* 调整排序选择器样式 */
.sort-picker {
  margin: 0; /* 清除原有margin */
  padding: 12rpx 20rpx;
  font-size: 28rpx;
  border-radius: 16rpx; /* 保持与搜索框一致圆角 */
  background: #f8f8f8;
}
/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
}
.empty-icon {
  width: 30rpx;
  height: 260rpx;
  margin-bottom: 32rpx;
}
.empty-text {
  font-size: 32rpx;
}