.service-list{
	padding: 0 20rpx;
}
.service-item{
	display: flex;
	padding: 20rpx 0; 
	border-bottom: 1rpx solid #e8e8e8;
}
.service-img{
	width: 220rpx;
	height: 200rpx;
}
.service-item image{
	width: 220rpx;
	height: 220rpx;
}
.service-text{
	flex: 1;
	margin-left: 20rpx;
	width: 100%;
}
.service-tite{
	color: #333;
	width: 100%;
	font-size: 34rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.service-tags{
	margin: 6rpx 0;
}
.service-tags text{
	padding: 6rpx 16rpx;
	border: 1rpx solid #003366;
	line-height: 1;
	color: #003366;
	font-size: 28rpx;
	border-radius: 4rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
	white-space: nowrap;
}
.service-city{
	color: #666;
}
/* 在原有wxss基础上添加/修改以下样式 */

/* 修改添加按钮样式 */
.btn-block.btn-orange {
  background-color: #003366; /* 深蓝色背景 */
  border-color: #003366;    /* 边框颜色同步 */
  color: white !important;   /* 文字颜色改为白色 */
}

/* 新增搜索按钮样式 */
.search-btn {
  background-color: #003366 !important;
  color: white !important;
  border: 1rpx solid #003366 !important;
}

/* 新增导出按钮样式 */
.search-extra-btn {
  background-color: #003366 !important;
  color: white !important;
  border: 1rpx solid #003366 !important;
}

/* 可选：调整按钮悬停状态（根据实际需要添加） */
.btn-block.btn-orange:active,
.search-btn:active,
.search-extra-btn:active {
  background-color: #002244 !important; /* 深色变体 */
  opacity: 0.8;
}