/* app.wxss */
.container {
  padding-bottom: 60px;
}

.header {
  height: 44px;
  padding: 8px 10px;
  background: linear-gradient(135deg, #FF6B6B, #FF8E53);
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title {
  font-size: 20px;
  font-weight: bold;
  color:#eee;
}



.icon-placeholder {
  width: 60px;
  height: 60px;
  background: #f8f8f8;
  border-radius: 8px;
  margin: 0 auto 8px;
}
.card-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 5px;
  padding: 5px;
}

.card-item {
  display: flex;
  flex-direction: column;  /* 改为纵向排列 */
  align-items: center;     /* 水平居中 */
  justify-content: center; /* 垂直居中（可选） */
  padding: 30rpx;
  /* 其他原有样式保持不变 */
}

.card-icon {
  width: 57px;
  height: 65px;
  background: #f8f8f8;
  border-radius: 8px;
  margin: 0 auto 8px;
}

.card-image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 16rpx;  /* 图片与文字间距 */
}

.card-text {
  font-size: 28rpx;
  color: linear-gradient(135deg, #FF6B6B, #FF8E53);
  /* 添加文字对齐方式 */
  text-align: center;
}
.logo-container {
  width: 100%;
  padding: 40rpx 0;
  display: flex;
  justify-content: center;
  background-color: #ffffff; /* 可选：设置背景色与标题栏统一 */
}
 
.logo-image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 20rpx; /* 可选：圆角效果 */
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.1); /* 可选：添加阴影 */
}