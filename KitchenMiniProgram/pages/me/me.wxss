/* 容器基础样式 */
.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部信息区 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 40rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 信息卡片 */
.info-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 0 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.05);
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #eee;
}

.info-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 32rpx;
  color: #666;
}

.item-value {
  font-size: 32rpx;
  color: #333;
}